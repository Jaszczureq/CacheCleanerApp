<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/row_padding"
                android:id="@+id/parent_layout">

    <ImageView android:layout_width="@dimen/img_width" android:layout_height="@dimen/img_height"
               android:id="@+id/row_image"
               android:src="@mipmap/ic_launcher"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/placeholder"
              android:id="@+id/row_title"
              android:layout_toRightOf="@+id/row_image"
              android:textColor="#000"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/row_titleMargin"
              android:textSize="@dimen/row_textSize"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/placeholder"
              android:id="@+id/row_author"
              android:layout_toEndOf="@+id/row_title"
              android:textColor="#000"
              android:layout_centerVertical="true"
              android:layout_marginStart="@dimen/row_titleMargin"
              android:textSize="@dimen/row_textSize"/>

</RelativeLayout>